<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bcy.dao.UserDao">

    <select id="getUserByEmail" parameterType="java.lang.String" resultType="bcy.dao.User"> select *
        from user where email = #{email} </select>

    <select id="getUserByName" parameterType="java.lang.String" resultType="bcy.dao.User"> select *
        from user where name = #{name} </select>

    <select id="getUserById" parameterType="java.lang.Long" resultType="bcy.dao.User"> select
        user.id,user.name,user.pwd,user.email,user.bio,user.level from user where id =
        #{id} </select>

    <insert id="addUser" parameterType="bcy.dao.User"> insert into user (name, email, pwd, bio,
        level) values (#{name}, #{email}, #{pwd}, "这个人很懒，木有签名~", 1) </insert>

    <update id="updateUser" parameterType="bcy.dao.User"> update user set name=#{name},
        email=#{email}, pwd=#{pwd}, bio=#{bio}, level=#{level} where id = #{id} </update>
</mapper>